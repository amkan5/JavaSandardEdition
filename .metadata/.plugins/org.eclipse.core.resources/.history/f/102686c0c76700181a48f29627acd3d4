package step3;
import javax.swing.JOptionPane;
public class Calc {
	public static void main(String[] args) {
    	int num1=0,total = 0, count=0, num2;
    	String str = "";
		while(true) {
				num1 = Integer.parseInt(JOptionPane.showInputDialog("Enter number1"));
	        	String op = JOptionPane.showInputDialog("Enter op");
	        	str += String.valueOf(num1) + op;
	        	switch(op){
	            case "+" : num2 = Integer.parseInt(JOptionPane.showInputDialog("Enter number2")); 
	            	total+=num1; break;
	            case "-" : total-=num1; break;
	            case "*" : total=total*num1; break;
	            case "/" : total+=total/num1; break;
	            case "%" : total+=total%num1; break;
	            case "=" : 
	            			JOptionPane.showMessageDialog(null, str  + total);
	            		 	return;
	            default : JOptionPane.showMessageDialog(null,"에러");
	            			return;
	        	}

			 
	        	}
		}
	}
