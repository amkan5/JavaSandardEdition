package Step4;

public class MatrixStudy4 {

	public static void main(String[] args) {
		int[][] mtx = new int[5][5];
		int k=0;
		for (int i=0;i<5;i++) {
			if(i<2) {
				for(int j=3-i;j<i+3;j++) {
					k++;
					mtx[i][j] = k;
				}
			}else {
				for (int j=i-2;j<7-i;j++) {
					k++;
					mtx[i][j] = k;
				}	
			}
		}
		for (int i=0;i<5;i++) {
			for(int j=0;j<5;j++) {
				System.out.print(mtx[i][j] + " ");
			}
			System.out.println();
		}
		
	}

}
