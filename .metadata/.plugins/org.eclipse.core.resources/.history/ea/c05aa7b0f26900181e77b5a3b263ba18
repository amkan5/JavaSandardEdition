package Step4;

public class Diagonal {
	public static void main(String[] args) {
	int[][] mtx = new int[6][6];
	int k= 0,r=0,c=2;
	for (int i=1;i<11;i++) {
		if (k<=15) {
		r=0;
		for (int j=1;j<=i;j++) {
			k++;
			mtx[r+j][c-j] = k;
		}
		c++;
		} else {
			r=2;
			c=6;
			for (int l=1;l<=i;l++) {
				k++;
				mtx[r+l][c-l] = k;
			}
			r++;
		}
	}
	for (int i=1;i<=5;i++) {
		for (int j=1;j<=5;j++) {
		System.out.print(mtx[i][j] + " ");	
		}
		System.out.println();
	}
	}
}
