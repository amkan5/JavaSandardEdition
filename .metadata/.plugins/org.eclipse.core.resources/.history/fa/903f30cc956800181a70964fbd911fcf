package Step4;

public class MatrixStudy4 {

	public static void main(String[] args) {
		int[][] mtx = new int[5][5];
		int k=0;
		for (int i=0;i<5;i++) {
			if(i<=3) {
				for(int j=3;j<i+2;j++) {
					k++;
					mtx[i][j] = k;
				}
			}else {
				for (int j=2;j<7-i;j++) {
					k++;
					mtx[i][j] = k;
				}
				
			}
		}

	}

}
