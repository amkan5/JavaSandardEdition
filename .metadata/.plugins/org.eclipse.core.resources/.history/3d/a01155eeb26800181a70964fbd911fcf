package Step4;

public class Snail {
	public static void main(String[] args) {
	 int[][] mtx = new int[6][6];
	 int k=0, cnt=5,x=-1,y=0,num=-1;
	 for(int i=1;i<=cnt;i++) {
		 for(int j=1;j<=cnt;j++) {
			 y += y+num;
			 k++;
			 mtx[x][y] = k;
		 }
		 cnt--; //4
		 for(int j=1;j<=cnt;j++) {
			 k++;
			 x += x+num;
		 }
		 num *= -1;
	 }
	 for(int i=1;i<=5;i++) {
			for(int j=1;j<=5;j++) {
			System.out.print(mtx[i][j] + " ");
			}
			System.out.println("");
		}
	}

}
