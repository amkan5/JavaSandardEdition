package Step5;

import javax.swing.JOptionPane;
enum Butt{
	EXIT,
	INPUT,
	LIST
}
public class Salary {
	public static void main(String[] args) {
		int cnt = 0;
		String[][] mtx = new String[5][5];
		while(true) {
		Butt[] buttons = {
				Butt.EXIT,
				Butt.INPUT,
				Butt.LIST
		};
		Butt menu = (Butt)JOptionPane.showInputDialog(
				null, //frame
				"Salary PAGE", //frame title
				"SELECT Salary MENU", //order
				JOptionPane.QUESTION_MESSAGE, //type
				null, //icon
				buttons, //Array of choices
				buttons[1] //default
				);
		switch(menu) {
		case EXIT : return;
		case INPUT : 
			String dept = JOptionPane.showInputDialog("부서");
			mtx[cnt][0] = dept;
			String name = JOptionPane.showInputDialog("성명");
			mtx[cnt][1] = dept;
			String sal = JOptionPane.showInputDialog("본봉");
			mtx[cnt][2] = dept;
			String bonus = JOptionPane.showInputDialog("수당");
			mtx[cnt][3] = dept;
			mtx[cnt][4] = mtx[cnt][2]+mtx[cnt][3];
			cnt++;
			break;
		case LIST : 
			String result = "부서\t성명\t본봉\t수당\t합계"; 
			for(int i=0;i<cnt;i++) {
				for (int j=0;j<5;j++) {
					result += "\n\"+ mtx[i][j]
				}
			}
			JOptionPane.showMessageDialog(null, result);
			break;
		default : return;
		}
		
		}
	}

}
