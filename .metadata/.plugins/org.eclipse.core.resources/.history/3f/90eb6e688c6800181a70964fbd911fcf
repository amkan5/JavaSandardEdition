package Step4;

public class matrixstudy2 {

	public static void main(String[] args) {
		int[][] mtx = new int[5][5];
		int k=0,j=0;
		for (int i=0;i<5;i++) {
			k++;
			mtx[i][j] = k;
			for (j=0;j<=i;j++) {
			}
		}
		for (int i=0;i<5;i++) {
			for (int j=0;j<5;j++) {
				System.out.print(mtx[i][j] + " " );
			}
			System.out.println("");
		}

	}

}
