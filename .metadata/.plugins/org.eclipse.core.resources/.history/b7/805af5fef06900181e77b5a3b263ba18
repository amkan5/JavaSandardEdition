package Step4;

public class Diagonal {
	public static void main(String[] args) {
	int[][] mtx = new int[6][6];
	int k= 0,r=0,c=2;
	for (int i=1;i<6;i++) {
		r=0;
		for (int j=0;j<=i;j++) {
			k++;
			mtx[r+i][c-i] = k;
		}
		c++;
	}
	for (int i=1;i<=5;i++) {
		for (int j=1;j<=5;j++) {
		System.out.print(mtx[i][j] + " ");	
		}
		System.out.println();
	}
	}
}
