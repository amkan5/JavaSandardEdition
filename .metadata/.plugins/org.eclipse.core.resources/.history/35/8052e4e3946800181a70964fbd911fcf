package Step4;

public class MatrixStudy4 {

	public static void main(String[] args) {
		int[][] mtx = new int[6][6];
		int k=0;
		for (int i=1;i<=5;i++) {
			if(i<=3) {
				for(int j=3;j<i+2;j++) {
					k++;
					mtx[i][j] = k;
				}
			}else {
				for (int j=2;j>4;j++) {
					k++
					mtx[i][j] = k;
				}
				
			}
		}

	}

}
